backup_files () 
{ 
    : only immediate backupups;
    : related: version_files w.r.t .bak;
    : date: 2023-10-21;
    indir .bak namedfiles
}
backup_here () 
{ 
    : recursively move backups down the stack;
    : clearing the way for their replacement at the top;
    : date: 2023-09-11;
    : date: 2024-04-29;
    :;
    : date: 2023-09-05;
    : debug ENTRY $@;
    set $1 ${BACKUP_DIRECTORY} "${2:-$PWD}";
    : debug SET $@ $(dirs);
    : pause;
    [[ -d $2 ]] || mkdir $2;
    [[ "$3" == "$PWD" ]] && { 
        : debug TEST: "$3" equal $PWD;
        cmp $1 $2/$1 2> /dev/null 1>&2 && { 
            : debug CMP RETURN $(dirs);
            : pause;
            return
        }
    };
    local mode=$(classic_mode $1);
    [[ -f $2/$1 ]] && { 
        : debug DOWN $@ $(dirs);
        : pause;
        cd $2;
        backup_here $1 "$3"
    } || { 
        mv $1 $2/$1;
        [[ $3 == $PWD ]] && { 
            : debug DONE: $@ $(dirs);
            : pause;
            cp $2/$1 $1;
            timestamp $2/$1 $1;
            chmod $mode $1;
            cd ..;
            : debug STACK RETURN $(dirs);
            : pause;
            return
        };
        cd ..;
        backup_here $1 "$3"
    }
}
backup_init () 
{ 
    : establish {BACKUP,VERSION}_DIRECTORY;
    : date: 2023-09-18;
    : date: 2023-09-20;
    : date: 2024-04-30;
    [[ $# -eq 1 ]] && { 
        comment ERROR, Zero or Two args;
        declare -f $(myname) 1>&2;
        return
    };
    set $@ .bak .ver;
    setenv BACKUP_DIRECTORY $1 > /dev/null;
    setenv VERSION_DIRECTORY $2 > /dev/null
}
backup_one () 
{ 
    : for a single file in possible non-local directory;
    : date: 2023-09-11;
    : debug ENTRY $PWD $@;
    : date: 2024-04-29;
    local file=${1:-/dev/null};
    report_notfile $file && { 
        : debug NOT file: $file;
        : pause;
        return 1
    };
    local file=$(basename $file);
    local dir=$(dirname $1);
    ignore pushd $dir;
    : debug PUSHD $(dirs);
    : pause;
    backup_here $file;
    ignore popd;
    : debug POPD $(dirs);
    : pause
}
backup_onlyfiles () 
{ 
    : candidate backup files, including DOT or system files;
    : date: 2023-09-11;
    : date: 2023-10-21;
    apply name_existing .* *
}
backup_outdated () 
{ 
    : backup files no longer used;
    comm -13 <(backup_onlyfiles) <(indir ${BACKUP_DIRECTORY:-.bak} backup_onlyfiles)
}
backup_sync () 
{ 
    : BACKUP Outdated backups and REMOVE them;
    : a backup is Outdated when there is a backup, but no FILE;
    : date: 2023-08-29;
    : date: 2023-09-11;
    : date: 2023-12-18;
    debug ENTRY $*;
    set -- ${@:-$(backup_outdated)};
    debug SET: $# $@;
    pause;
    [[ $# -gt 0 ]] || return;
    ignore pushd .bak;
    debug PUSHD $(dirs);
    pause;
    backup $@;
    rm -f $@;
    debug POPD 0 $(dirs);
    pause;
    ignore popd;
    debug POPD 1 $(dirs);
    pause;
    remvds > /dev/null;
    debug RETURN $(dirs);
    pause
}
backup_ver () 
{ 
    : date: 2023-12-31;
    : date: 2024-01-06;
    : date: 2024-06-28;
    backup_directories;
    report_notdirectory $BACKUP_DIRECTORY && return 1;
    local MAKE_VERSION=${1:-$(next_version)};
    debug VERSION_DIRECTORY $VERSION_DIRECTORY;
    set -- $(backup_files | sed "s/^/$BACKUP_DIRECTORY\//");
    set -- ${*:-/dev/null};
    debug BACKUP FILES: $*;
    pause;
    local ver="$VERSION_DIRECTORY/$MAKE_VERSION";
    rm -rf "$ver";
    ver=$(needir "$ver");
    find "$ver" -type f;
    pause;
    ln -f $* $ver;
    find "$ver" -type f
}
classic_mode () 
{ 
    : the octal representation of files RWX modes;
    : date: 2023-07-22;
    set -- $(file_mode $1);
    echo ${1:4}
}
dotDirs () 
{ 
    : dot-named directories;
    : date: 2023-09-27;
    for d in $(ls -ad .*);
    do
        [[ -d $d ]] && echo $d;
    done
}
file_mode () 
{ 
    : permission bits of the file argument;
    : date: 2023-07-22;
    report_notfile ${1:-/dev/null} && return 1;
    set -- $(stat -r $1);
    echo $3
}
