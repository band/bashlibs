backup () 
{ 
    : ~ one or more files down the .bak/.bak/... stack;
    : date: 2023-09-20;
    : date: 2024-08-20;
    local file;
    backup_init;
    apply backup_one $@
}
backup_all () 
{ 
    : this shud B a _list;
    : date: 2024-09-29;
    ${*:-echo} backup $(myname) name_existing \
               backup_{copyright,allfiles,depth,init,files,sync} \
               backup_{outdated,local,entry,ver,fence,here,named,one} \
               backup_{toclean,tosync,abstracts,help,readme,test} \
               backup_{verify,onlyfiles,dir,1sync}
}
backup_allfiles () 
{ 
    function backup_needed () 
    { 
        cmp -s $1 .bak/$1 || echo $1
    };
    backup_sync;
    local files=$(backup_onlyfiles);
    backup $(apply backup_needed $files);
    unset backup_needed
}
