backup_files () 
{ 
    : only immediate backupups;
    : related: version_files w.r.t .bak;
    : lib: fnusedlib
    : date: 2023-10-21;
    indir .bak namedfiles
}
backup_here () {
    : recursively move backups down the stack
    : clearing the way for their replacement at the top
    : uses: cmp
    : lib: fnusedlib
    debug ENTRY $@
    [ -n "$ZSH_VERSION" ] && echo "depth: ${#funcstack}"
    set $1 ${BACKUP_DIRECTORY} "${2:-$PWD}"
    debug SET $@ $(dirs)
    [[ -d $2 ]] || mkdir $2
    if [[ "$3" == "$PWD" ]]; then
	: debug TEST: "$3" equal $PWD
	if cmp -s "$1" "$2/$1" 2>/dev/null; then
	    echo "$1 unchanged, skipping backup"
	    return 0
	fi
    fi
    local mode=$(classic_mode "$1") 
    [[ -f "$2/$1" ]] && {
	: debug DOWN "$@" $(dirs)
	cd "$2"
	echo "DIRS: " $(dirs)
	backup_here "$1" "$3"
    } || {
	mv $1 $2/$1
	[[ $3 == $PWD ]] && {
	    : debug DONE: "$@" $(dirs)
	    cp $2/$1 $1
	    timestamp $2/$1 $1
	    chmod $mode $1
	    cd ..
	    : debug STACK RETURN $(dirs)
	    return
	}
	cd ..
	echo "DIRS: " $(dirs)
	backup_here $1 "$3"
    }
}
backup_init () 
{
    # 2026-01-01: TOO: cleanup usage comment
    : establish {BACKUP,VERSION}_DIRECTORY;
    : date: 2023-09-18;
    : date: 2026-01-01
    : lib: shutilib
    [[ $# -eq 1 ]] && { 
        comment ERROR, Zero or Two args;
        return
    };
    set $@ .bak .ver;
    setenv BACKUP_DIRECTORY $1 > /dev/null;
    setenv VERSION_DIRECTORY $2 > /dev/null
}
backup_one () 
{
    # 2026-01-01: TODO: revisit the non-local directory operation
    : for a single file in possible non-local directory;
    : date: 2023-09-11;
    : debug ENTRY $PWD $@;
    : date: 2024-04-29;
    : lib: fnusedlib, fnusedlib
    local file=${1:-/dev/null};
    report_notfile $file && return 1
    local file=$(basename $file);
    local dir=$(dirname $1);
    ignore pushd $dir;
    : debug PUSHD $(dirs);
    : pause;
    backup_here $file;
    ignore popd;
    : debug POPD $(dirs);
    : pause
}
backup_onlyfiles () 
{ 
    : candidate backup files, including DOT files;
    : lib: fnusedlib
    : date: 2026-01-01: use array to handle shell expansion
    local files=( * .* )
    apply name_existing "${files[@]}"
}
backup_outdated () 
{ 
    : files in .bak/ tree not in cwd;
    : uses: comm
    comm -13 <(backup_onlyfiles) <(indir ${BACKUP_DIRECTORY:-.bak} backup_onlyfiles)
}
backup_prunefiles () {
    : prune bak files not linked to a version
    : uses: basename, find, rm, sort, xargs
    for f in $(find .ver -type f); do
	: debug echo $f
	find .bak/.bak -name $(basename $f) -links 1
    done | sort -u | xargs rm -v
    : prune unversioned files older than the last 2 backups
    find .bak/.bak/.bak -type f -links 1 | xargs printf "pruning(i.e., rm -v): %s\n"
}
backup_needed () {
    : files in cwd not in .bak/ tree
    cmp -s "$1" .bak/"$1" || echo "$1"
}
backup_libstatus ()
{ 
    : report on backup and version state of shell library files in cwd;
    : uses: tree
    : lib: fnusedlib
    : date: 2026-01-02;
    : debug ENTRY "$*";
    if [[ $# -ne 0 && "$1" != '.' ]]; then
	error "libstatus not available for remote directories"
	return 1
    fi
    echo "libraries that are not backed up:"
    apply backup_needed *lib
    echo "\nshow all version files:"
    version_files
    tree -a .ver
    echo "\nshow backup tree:"
    tree -a .bak
}

