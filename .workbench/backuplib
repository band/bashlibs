backup_files () 
{ 
    : only immediate backupups;
    : related: version_files w.r.t .bak;
    : date: 2023-10-21;
    indir .bak namedfiles
}
backup_init () 
{ 
    : establish {BACKUP,VERSION}_DIRECTORY;
    : date: 2023-09-18;
    : date: 2023-09-20;
    : date: 2024-04-30;
    [[ $# -eq 1 ]] && { 
        comment ERROR, Zero or Two args;
        declare -f $(myname) 1>&2;
        return
    };
    set $@ .bak .ver;
    setenv BACKUP_DIRECTORY $1 > /dev/null;
    setenv VERSION_DIRECTORY $2 > /dev/null
}
backup_one () 
{ 
    : for a single file in possible non-local directory;
    : date: 2023-09-11;
    : debug ENTRY $PWD $@;
    : date: 2024-04-29;
    local file=${1:-/dev/null};
    report_notfile $file && { 
        : debug NOT file: $file;
        : pause;
        return 1
    };
    local file=$(basename $file);
    local dir=$(dirname $1);
    ignore pushd $dir;
    : debug PUSHD $(dirs);
    : pause;
    backup_here $file;
    ignore popd;
    : debug POPD $(dirs);
    : pause
}
backup_onlyfiles () 
{ 
    : candidate backup files, including DOT or system files;
    : date: 2023-09-11;
    : date: 2023-10-21;
    : date: 2025-12-28: eval and quote to prevent early globbing
    eval "apply name_existing .* *"
}
# 2025-12-28: maybe backup_prunefiles is the new version of backup_sync () 
backup_outdated () 
{ 
    : backup files no longer used;
    comm -13 <(backup_onlyfiles) <(indir ${BACKUP_DIRECTORY:-.bak} backup_onlyfiles)
}
backup_sync () { 
    : BACKUP Outdated backups and REMOVE them;
    : a backup is Outdated when there is a backup, but no FILE;
    : date: 2023-08-29;
    : date: 2023-09-11;
    : date: 2023-12-18;
    debug ENTRY $*;
    set -- ${@:-$(backup_outdated)};
    debug SET: $# $@;
    pause;
    [[ $# -gt 0 ]] || return;
    ignore pushd .bak;
    debug PUSHD $(dirs);
    pause;
    backup $@;
    rm -f $@;
    debug POPD 0 $(dirs);
    pause;
    ignore popd;
    debug POPD 1 $(dirs);
    pause;
    remvds > /dev/null;
    debug RETURN $(dirs);
    pause
}
file_mode () 
{ 
    : permission bits of the file argument;
    : date: 2023-07-22;
    report_notfile ${1:-/dev/null} && return 1;
    set -- $(stat -r $1);
    echo $3
}
# 2025-12-28: WLA backup functions (for a revised backuplib)
# 2025-12-14: prune .bak/.bak/* files not linked to a .ver/
backup_prunefiles () {
    : prune bak files not linked to a version
    : uses: basename, rm, sort, xargs
    for f in $(find .ver -type f); do
	: debug echo $f
	find .bak/.bak -name $(basename $f) -links 1
    done | sort -u | xargs printf "pruning(i.e., rm -v): %s\n"
}
backup_needed () {
    : files in cwd not in .bak/ tree
    cmp -s $1 .bak/$1 || echo $1;
}
