# 2025-12-15: experiment with pause functions
pause ()
{
    return
}
pause_off ()
{
    : do not pause, redefine pause to just return;
    : date: 2023-03-29;
    : date: 2024-11-05;
    function pause () 
    { 
        return
    }
}
pause_on ()
{
    : pause the script, waiting for the users CR;
    : date: 2023-01-30;
    : date: 2024-11-05;
    if in_zsh; then
       pause () { read "?[return] / [Ctrl-C] ${funcstack[2]} $@ ? " < /dev/tty; }
    elif in_bash; then
       pause () { read -p \"[return] / [Ctrl-C] \${FUNCNAME[1]} \$@ ? \" < /dev/tty; }
    else
       echo "unsupported shell - use zsh or bash"
    fi
}
#
# 2025-12-14: claude.ai assisted
in_zsh() {
    [ -n "$ZSH_VERSION" ]
}
in_bash() {
    [ -n "$BASH_VERSION" ]
}
